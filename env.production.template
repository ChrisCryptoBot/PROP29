# PROPER 2.9 Production Environment Configuration Template
# Copy this file to .env.production and update with your production values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
API_URL=https://api.proper29.yourdomain.com
WS_URL=wss://api.proper29.yourdomain.com/ws
FRONTEND_URL=https://dashboard.proper29.yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://proper29_user:secure_password_here@your-db-host:5432/proper29_prod
DB_HOST=your-db-host
DB_PORT=5432
DB_NAME=proper29_prod
DB_USER=proper29_user
DB_PASSWORD=secure_password_here

# Redis Cache
REDIS_URL=redis://your-redis-host:6379
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Session Security
SESSION_SECRET=your-session-secret-key-here
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=86400000

# =============================================================================
# AI/ML SERVICES
# =============================================================================
AI_SERVICE_URL=https://ai.proper29.yourdomain.com
ML_MODEL_PATH=/opt/proper29/models
AI_API_KEY=your-ai-service-api-key
TENSORFLOW_GPU_ENABLED=true
ML_MODEL_CACHE_SIZE=1024

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=proper29-files-prod
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@yourdomain.com
SMTP_PASS=your-smtp-password
SMTP_SECURE=true
EMAIL_FROM=PROPER 2.9 <alerts@yourdomain.com>
EMAIL_REPLY_TO=support@yourdomain.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Emergency Services Integration
EMERGENCY_API_URL=https://emergency-api.yourdomain.com
EMERGENCY_API_KEY=your-emergency-api-key
POLICE_DISPATCH_NUMBER=911
FIRE_DISPATCH_NUMBER=911
MEDICAL_DISPATCH_NUMBER=911

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/proper29
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=PROPER 2.9 Production

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# =============================================================================
# REAL-TIME COMMUNICATION
# =============================================================================
# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000
WS_MAX_CONNECTIONS=1000
WS_RATE_LIMIT=100

# Event Bus Configuration
EVENT_BUS_URL=redis://your-redis-host:6379/1
EVENT_BUS_CHANNEL=proper29_events
EVENT_RETENTION_DAYS=30

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=100

# CORS Configuration
CORS_ORIGINS=https://dashboard.proper29.yourdomain.com,https://admin.proper29.yourdomain.com
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline';
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block
REFERRER_POLICY=strict-origin-when-cross-origin

# Data Encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=AES-256-GCM

# =============================================================================
# HOTEL-SPECIFIC CONFIGURATION
# =============================================================================
# Property Configuration
DEFAULT_PROPERTY_ID=your-default-property-id
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=USD

# Guest Safety Configuration
PANIC_BUTTON_ENABLED=true
PANIC_BUTTON_RESPONSE_TIME=120
MEDICAL_EMERGENCY_ENABLED=true
FALL_DETECTION_ENABLED=true
GUEST_TRACKING_ENABLED=true

# Patrol Configuration
PATROL_OPTIMIZATION_ENABLED=true
PATROL_AI_MODEL_PATH=/opt/proper29/models/patrol_optimization
PATROL_CHECK_INTERVAL=30000
PATROL_ALERT_THRESHOLD=300

# Access Control Configuration
ACCESS_CONTROL_ENABLED=true
BIOMETRIC_AUTH_ENABLED=true
DIGITAL_KEYS_ENABLED=true
ACCESS_LOG_RETENTION_DAYS=90

# IoT Configuration
IOT_ENABLED=true
IOT_SENSOR_POLLING_INTERVAL=60000
IOT_ALERT_THRESHOLDS={"temperature": {"min": 10, "max": 30}, "humidity": {"min": 30, "max": 70}, "smoke": {"max": 0.1}}

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Property Management System (PMS) Integration
PMS_TYPE=opera
PMS_API_URL=https://pms-api.yourdomain.com
PMS_API_KEY=your-pms-api-key
PMS_SYNC_INTERVAL=300000

# Hardware Integration
HARDWARE_API_URL=https://hardware-api.yourdomain.com
HARDWARE_API_KEY=your-hardware-api-key
CAMERA_INTEGRATION_ENABLED=true
DOOR_CONTROLLER_ENABLED=true
SENSOR_INTEGRATION_ENABLED=true

# Third-party Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
WEATHER_API_KEY=your-weather-api-key
TRANSLATION_API_KEY=your-translation-api-key

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=proper29-backups-prod
BACKUP_ENCRYPTION_ENABLED=true

# Disaster Recovery
DR_ENABLED=true
DR_RPO=3600
DR_RTO=7200
DR_BACKUP_LOCATION=us-west-2

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug Configuration (DISABLE IN PRODUCTION)
DEBUG_ENABLED=false
DEBUG_LEVEL=error
DEBUG_LOG_FILE=/var/log/proper29/debug.log

# API Documentation
API_DOCS_ENABLED=false
API_DOCS_URL=/docs
SWAGGER_UI_ENABLED=false

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================
# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru

# Database Optimization
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf
UPLOAD_PATH=/var/uploads/proper29

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================
# Audit Configuration
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_EVENTS=["user_login", "user_logout", "incident_create", "incident_update", "access_granted", "access_denied"]

# GDPR Compliance
GDPR_ENABLED=true
GDPR_DATA_RETENTION_DAYS=2555
GDPR_RIGHT_TO_DELETE_ENABLED=true
GDPR_RIGHT_TO_EXPORT_ENABLED=true

# PCI DSS Compliance
PCI_COMPLIANCE_ENABLED=true
PCI_DATA_ENCRYPTION_ENABLED=true
PCI_TOKENIZATION_ENABLED=true

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================
# Alert Configuration
ALERT_ENABLED=true
ALERT_CHANNELS=email,sms,push
ALERT_ESCALATION_ENABLED=true
ALERT_ESCALATION_TIMEOUT=300000

# Notification Templates
NOTIFICATION_TEMPLATES_PATH=/opt/proper29/templates
NOTIFICATION_DEFAULT_LANGUAGE=en
NOTIFICATION_FALLBACK_LANGUAGE=en

# =============================================================================
# MAINTENANCE & UPDATES
# =============================================================================
# Maintenance Mode
MAINTENANCE_MODE_ENABLED=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# Auto-update Configuration
AUTO_UPDATE_ENABLED=true
AUTO_UPDATE_CHECK_INTERVAL=86400000
AUTO_UPDATE_CHANNEL=stable

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add any custom configuration variables below
CUSTOM_FEATURE_FLAGS={"beta_features": false, "experimental_ai": true}
CUSTOM_INTEGRATIONS={"custom_pms": false, "custom_hardware": false} 