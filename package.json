{
  "name": "proper-2.9-platform",
  "version": "2.9.0",
  "description": "PROPER 2.9 AI-Enhanced Hotel Security Platform - Comprehensive hotel security management system with AI-powered analytics",
  "main": "electron/main.js",
  "homepage": "https://proper-security.com/platform",
  "private": true,
  "dependencies": {
    "clsx": "^2.1.1",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.4",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tailwind-merge": "^3.3.1",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@types/ws": "^8.5.5"
  },
  "scripts": {
    "start": "cd frontend && react-scripts start",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && python start_backend.py",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "build": "cd frontend && react-scripts build",
    "test": "cd frontend && react-scripts test",
    "test:coverage": "cd frontend && react-scripts test --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "eject": "cd frontend && react-scripts eject",
    "lint": "cd frontend && eslint src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "cd frontend && eslint src --ext .ts,.tsx,.js,.jsx --fix",
    "format": "cd frontend && prettier --write src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "format:check": "cd frontend && prettier --check src/**/*.{ts,tsx,js,jsx,json,css,md}",
    "type-check": "cd frontend && tsc --noEmit",
    "build:production": "npm run build && npm run build:electron",
    "build:electron": "electron-builder",
    "build:electron:win": "electron-builder --win",
    "build:electron:mac": "electron-builder --mac",
    "build:electron:linux": "electron-builder --linux",
    "dev:electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules package-lock.json && npm install",
    "clean:backend": "cd backend && find . -name \"__pycache__\" -type d -exec rm -rf {} + || true",
    "setup:dev": "npm run install:all && npm run setup:database",
    "setup:database": "cd backend && python setup_database.py",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "deploy:staging": "npm run build:production && npm run docker:build && npm run docker:up",
    "deploy:production": "npm run build:production && docker-compose -f docker-compose.prod.yml up -d",
    "package:win": "npm run build && electron-builder --win --publish=never",
    "package:mac": "npm run build && electron-builder --mac --publish=never",
    "package:linux": "npm run build && electron-builder --linux --publish=never",
    "package:all": "npm run build && electron-builder -mwl --publish=never",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.proper.security.platform",
    "productName": "PROPER 2.9",
    "directories": {
      "output": "dist"
    },
    "files": [
      "frontend/build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "frontend/public/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "frontend/public/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "frontend/public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "jsdom",
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/proper-security/proper29-platform.git"
  },
  "keywords": [
    "hotel",
    "security",
    "ai",
    "machine-learning",
    "real-time",
    "dashboard",
    "patrol",
    "incident-management",
    "access-control",
    "guest-safety"
  ],
  "author": "PROPER Security Team",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/proper-security/proper29-platform/issues"
  }
}
